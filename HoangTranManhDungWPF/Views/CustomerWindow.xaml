<Window x:Class="HoangTranManhDungWPF.Views.CustomerWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:HoangTranManhDungWPF.Views.Customer"
        Title="Customer Dashboard" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="My Profile">
                <views:ProfileView DataContext="{Binding ProfileVM}"/>
            </TabItem>
            <TabItem Header="My Booking History">
                <views:BookingHistoryView DataContext="{Binding BookingHistoryVM}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
